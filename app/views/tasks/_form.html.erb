<%= form_with(model: @task, local: true) do |form| %>
  <% if @task.errors.any?%>
    <div id="error_explanation">
      <h2><%= @task.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @task.errors.full_messages.each do |msg|%>
        <li><%= msg%></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="task_title">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div class="task_details">
    <%= form.label :details %>
    <%= form.text_field :details %>
  </div>
  <div class="task_time_limit">
    <%= form.label :time_limit %>
    <%= form.datetime_select :time_limit %>
  </div>
  <div class="task_completed">
    <%= form.label :completed %>
    <%= form.select :completed, Task.completeds.keys.to_a %>
  </div>
  <div class="task_priority">
    <%= form.label :priority%>
    <%= form.select :priority, Task.priorities.keys.to_a %>
  </div>
  <div class="task_label">
    <%= form.label :label%>
    <%= form.collection_check_boxes(:label_ids, Label.all, :id, :name) %>
  </div>

  <%= form.submit %>
<% end %>
<br>
<%= link_to "タスク一覧に戻る", tasks_path %> 
